swagger: "2.0"
info:
  title: "JIRA Create Issue API"
  version: "1.0"
host: "jaamautomation.atlassian.net"
basePath: "/rest/api/3"
schemes:
  - "https"
paths:
  /issue:
    post:
      summary: "Create a JIRA Issue"
      description: "Create a new issue in JIRA."
      consumes:
        - "application/json"
      produces:
        - "application/json"
      parameters:
        - in: "query"
          name: "projectKey"
          description: "The project key for the issue"
          required: true
          type: "string"
        - in: "query"
          name: "summary"
          description: "The summary of the issue"
          required: true
          type: "string"
        - in: "query"
          name: "description"
          description: "The description of the issue"
          required: true
          type: "string"
        - in: "query"
          name: "issueType"
          description: "The issue type (e.g., 'Bug')"
          required: true
          type: "string"
      responses:
        201:
          description: "Issue created successfully"
          schema:
            type: "object"
        400:
          description: "Bad request"
          schema:
            type: "object"
        401:
          description: "Unauthorized"
          schema:
            type: "object"
        403:
          description: "Forbidden"
          schema:
            type: "object"
        404:
          description: "Not found"
          schema:
            type: "object"
        500:
          description: "Internal server error"
          schema:
            type: "object"
